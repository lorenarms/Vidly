@model Vidly.ViewModels.MovieFormViewModel

@*TODO: Add validation to form
	

*@

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movies"))
{
	@Html.ValidationSummary()

	<div class="mb-3">
		@Html.LabelFor(m => m.Name)
		@Html.TextBoxFor(m => m.Name, new { @class= "form-control" })
		@Html.ValidationMessageFor(m => m.Name)
	</div>

	<div class="mb-3">
		@Html.LabelFor(m => m.DateReleased)
		@Html.TextBoxFor(m => m.DateReleased, "{0:d MMM yyyy}", new { @class= "form-control" })
		@Html.ValidationMessageFor(m => m.DateReleased)
	</div>

	<div class="mb-3">
		@Html.LabelFor(m => m.GenreId)
		@Html.DropDownListFor(m => m.GenreId,
			new SelectList(Model.Genres, "Id", "Name"), "", new { @class="form-control"})
		@Html.ValidationMessageFor(m => m.GenreId)
	</div>

	<div class="mb-3">
		@Html.LabelFor(m => m.NumberInStock)
		@Html.TextBoxFor(m => m.NumberInStock, new { @class="form-control" })
		@Html.ValidationMessageFor(m => m.NumberInStock)
	</div>

	@Html.HiddenFor(m => m.Id)
	@Html.AntiForgeryToken()
	<button type="submit" class="btn btn-primary">Save</button>
}