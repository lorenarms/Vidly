@model IEnumerable<Vidly.Models.Customer>


<h2>Customers</h2>

<p>
	@Html.ActionLink("New Customer", "New","Customers",
		null, new { @class="btn btn-primary mx-auto" })
</p>

@if (!Model.Any())
{
	<p>We don't have any customers yet!</p>
}
else
{
	<body>
	<table id="customers" class="table table-bordered table-hover">
		<thead>
		<tr>
			<th>Customer Name</th>
			<th>Membership Type</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
		</thead>
		<tbody>
		@foreach (var customer in Model)
		{


			<tr>
				<td>
					@customer.Name
				</td>
				<td>
					@customer.MembershipType.MembershipTypeName
				</td>
				<td>
					@Html.ActionLink("Edit",
						"Edit",
						"Customers",
						new {id = customer.Id},
						new {@class = "btn btn-secondary"})
				</td>
				<td>
					<button data-customer-id="@customer.Id" class="btn btn-link js-delete">Delete</button>
				</td>
			</tr>

		}
		</tbody>
	</table>
	
	
	
	
	</body>
	
	
}


@section scripts
{
	<script>
		$(document).ready(function () {

			$("#customers .js-delete").on("click", function() {
				var button = $(this);
				
				if (confirm("Are you sure you want to delete this customer?"))
				$.ajax({
					url: "/api/customer/" + button.attr("data-customer-id"),
					method: "DELETE",
					success: function() {
						button.parents("tr").remove();
						console.log("Success!");
					}
				});
			});
		});
		
	</script>
}