@model Vidly.ViewModels.CustomerFormViewModel

<h2>@Model.Title</h2>



@using (Html.BeginForm("Save", "Customers"))
{
	@Html.ValidationSummary();

	<div class="mb-3">
		@Html.LabelFor(m => m.Name)
		@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Name)
	</div>
	
	<div class="mb-3">
		@Html.LabelFor(m => m.MembershipTypeId)
		@Html.DropDownListFor(m => m.MembershipTypeId,
			new SelectList(Model.MembershipTypes, "Id", "MembershipTypeName"), "Select a Membership Type", new { @class="form-control"})
		@Html.ValidationMessageFor(m => m.MembershipTypeId)
	</div>

	<div class="mb-3">
		@Html.LabelFor(m => m.Birthdate)
		@Html.TextBoxFor(m => m.Birthdate, "{0:d MMM yyyy}", new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Birthdate)
	</div>

	<div class="mb-3">
		<label>
			@Html.CheckBoxFor(m => m.IsSubscribedToNewsLetter) Subscribed to Newsletter?
		</label>
	</div>
	@Html.HiddenFor(m => m.Id)
	@Html.AntiForgeryToken()
	<button type="submit" class="btn btn-primary">Save</button>
}