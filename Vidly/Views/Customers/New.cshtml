@model Vidly.ViewModels.CustomerFormViewModel

<h2>New Customer

</h2>

@using (Html.BeginForm("Create", "Customers"))
{
	<div class="mb-3">
		@Html.LabelFor(m => m.Name)
		@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
	</div>
	<div class="mb-3">
		@Html.LabelFor(m => m.Birthdate)
		@Html.TextBoxFor(m => m.Birthdate, new { @class = "form-control" })
	</div>
	<div class="form-check">
		<label>
			@Html.CheckBoxFor(m => m.IsSubscribedToNewsLetter) Subscribed to Newsletter?

		</label>
	</div>

	<div class="mb-3">
		@Html.LabelFor(m => m.MembershipTypeId)
		@Html.DropDownListFor(m => m.MembershipTypeId, 
			new SelectList(Model.MembershipTypes, "Id", "Name"), "", new { @class="form-control"})
	</div>


}